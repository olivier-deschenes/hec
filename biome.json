{
	"$schema": "https://biomejs.dev/schemas/1.6.3/schema.json",
	"files": {
		"include": ["./src/**/*.{js,ts,jsx,tsx}"]
	},
	"linter": {
		"enabled": true,
		"rules": {
			"correctness": {
				"noUnusedImports": "error",
				"noUnusedVariables": "error"
			},
			"recommended": true,
			"style": {
				"noNonNullAssertion": "warn"
			}
		}
	},
	"organizeImports": {
		"enabled": true
	}
}
